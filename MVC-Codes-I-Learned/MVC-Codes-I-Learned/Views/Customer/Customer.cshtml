@using MVC_Codes_I_Learned.Models.Entity
@*@using PagedList
@using PagedList.Mvc*@
@*@model PagedList.IPagedList<Customers>*@
@model List<Customers>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Customer</h2>
@using (Html.BeginForm("Customer", "Customer", FormMethod.Get))
{
    <p>
        Search Customer : @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>CUSTOMER ID</th>
        <th>CUSTOMER</th>
        <th>DEPARTMENT</th>
        <th>CITY</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var cstmr in Model)
        {
            <tr>
                <td>@cstmr.CustomerID</td>
                <td>@cstmr.ContactName</td>
                <td>@cstmr.ContactTitle</td>
                <td>@cstmr.City</td>
                <td><a href="/Customer/Delete/@cstmr.CustomerID" class="btn btn-danger"> DELETE </a></td>
                <td><a href="/Customer/GetCustomer/@cstmr.CustomerID" class="btn btn-success"> UPDATE </a></td>
                <td>@Html.ActionLink("DELETE BUTTON", "Delete", new { id = @cstmr.CustomerID }, new { @class = "btn btn-warning", onclick = "return confirm('Are you sure ?')" })</td>
            </tr>
        }
    </tbody>
</table>
